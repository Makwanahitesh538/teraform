pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('day-9-module') {
                    sh 'terraform init -reconfigure'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('day-9-module') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { params.theparameters == 'apply' }
            }
            steps {
                dir('day-9-module') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { params.theparameters == 'destroy' }
            }
            steps {
                dir('day-9-module') {
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }

    parameters {
        choice(
            name: 'theparameters',
            choices: ['apply', 'destroy'],
            description: 'Choose apply or destroy'
        )
    }
}
